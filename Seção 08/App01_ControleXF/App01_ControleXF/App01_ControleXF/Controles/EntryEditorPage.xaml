<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App01_ControleXF.Controles.EntryEditorPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="TxtIdade"
                Text=""
                TextColor="Red"
                Placeholder="Digite sua idade"
                PlaceholderColor="Blue"
                IsPassword="false"
                Keyboard="Numeric"
                BackgroundColor="#CCCCCC"></Entry>
            <Editor x:Name="TxtComentario" HeightRequest="200"></Editor>
            <Label x:Name="LblDuplicado"></Label>
            <Label x:Name="LblQuantidadeCaracteres"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>